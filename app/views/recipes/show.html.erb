<div class="main_content">
	<div id="recipe_top" class="row">
		<div class="col-md-4">
			<%= image_tag @recipe.image_url, class: "recipe-image" if @recipe.image.present? %>
		</div>
		<div class="col-md-8">
			<div id="recipe_info">
				<h4><%= @recipe.title %></h4> 
				<p><%= @recipe.description %></p> 
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div id="ingredients">
				<h2>Ingredients</h2>
				<ul>
					<% @recipe.ingredients.each do |ingredient|%>
						<li><%= ingredient.name %></li>
					<% end %>
				</ul>
			</div>
		</div>

		<div class="col-md-6">
			<div id="directions">
				<h2>Directions</h2>
				<ul>
					<% @recipe.directions.each do |direction|%>
						<li><%= direction.step %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<%= link_to "Back", root_path, class: "btn btn-default" %> 
			<%= link_to "Edit Recipe", edit_recipe_path, class: "btn btn-default" %> 
			<%= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %> 

		</div>
	</div>
</div>




